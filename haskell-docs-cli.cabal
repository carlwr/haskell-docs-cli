    README.md
    ChangeLog.md

source-repository head
  type: git
  location: https://github.com/lazamar/haskell-docs-cli

common common-base
  default-extensions:
      ApplicativeDo
      OverloadedStrings
      RecordWildCards
      TupleSections
      LambdaCase
      FlexibleInstances
      MultiWayIf
      GeneralisedNewtypeDeriving
      DerivingStrategies
      MultiParamTypeClasses
      ScopedTypeVariables

library
  import: common-base
  exposed-modules:
      Data.Cache
      Docs.CLI.Directory
      Docs.CLI.Evaluate
      Docs.CLI.Haddock
      Docs.CLI.Hoogle
      Docs.CLI.Types
